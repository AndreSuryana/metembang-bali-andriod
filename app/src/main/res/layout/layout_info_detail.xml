<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:background="@color/white"
    android:visibility="gone"
    tools:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="127dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel_bold"
            android:paddingVertical="8dp"
            android:text="@string/label_author"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_author" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel_bold"
            android:paddingVertical="8dp"
            android:text="@string/label_category"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_category" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label_sub_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel_bold"
            android:paddingVertical="8dp"
            android:text="@string/label_sub_category"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_sub_category" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label_mood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel_bold"
            android:paddingVertical="8dp"
            android:text="@string/label_mood"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_mood" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label_meaning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel_bold"
            android:paddingVertical="8dp"
            android:text="@string/label_meaning"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_meaning" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label_cover_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel_bold"
            android:paddingVertical="8dp"
            android:text="@string/label_cover_source"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_cover_source" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label_rule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel_bold"
            android:paddingVertical="8dp"
            android:text="@string/label_rule"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_rule" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label_usage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel_bold"
            android:paddingVertical="8dp"
            android:text="@string/label_usage"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_usage" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label_created_at"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel_bold"
            android:paddingVertical="8dp"
            android:text="@string/label_created_at"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_date_created" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_author" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_sub_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_category" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_mood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_sub_category" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_meaning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_mood" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_cover_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_meaning" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_rule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_cover_source" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_usage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_rule" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_date_created"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_usage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>