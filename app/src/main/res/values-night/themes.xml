<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MetembangBali" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Window content transition. -->
        <item name="android:windowContentTransitions">true</item>
        <!-- Fullscreen window. -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Window background color. -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyTextInputLayout_NoHorizontalPadding" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/NoPadding_Overlay</item>
    </style>

    <style name="NoPadding_Overlay">
        <item name="editTextStyle">@style/MyTextInputEditText_NoHorizontalPadding</item>
    </style>

    <style name="MyTextInputEditText_NoHorizontalPadding" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">
        <!-- Horizontal padding -->
        <item name="android:paddingStart" tools:ignore="NewApi">0dp</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="RoundedCornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="RoundedCornerImageView.8dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundedCornerImageView.12dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="RoundedCornerImageView.24dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

</resources>